{
  "name":"<%= appname %>",
  "version": "0.1.0",
  "description": "<%= description %>",
  "main": "module.js",
  "files": [
    "module.js"
  ],
  "scripts": {
    "build": "webpack",
    "build-debug": "webpack --devtool inline-source-map",
    "build-watch": "webpack --devtool inline-source-map --watch",
    "prepublish": "npm run build"
  },
  <% if (author.name && author.email) { %>
  "author": "<%= author.name %> <<%= author.email %>>",
  <% } else if (author.name) { %>
  "author": "<%= author.name %>",
  <% } %>
  <% if (typeof license === 'string') { %>
  "license": "<%= license %>",
  <% } %>
  <% if (author.github) { %>
  "repository": {
      "type": "git",
      "url": "<%= author.github %>/<%= appname %>"
  },
  <% } %>
  "keywords": [
    "dicoogle", "dicoogle-plugin"
  ],
  "dicoogle": {
    "slot-id": "<%= dicoogle.slotId %>",
    <% if (dicoogle.caption && dicoogle.caption !== '') { %>
    "caption": "<%= dicoogle.caption %>",
    <% } %>
    "module-file": "module.js"
  }
}